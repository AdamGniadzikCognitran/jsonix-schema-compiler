<assembly>
	<id>ant-src</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<includes>
				<include>README*</include>
				<include>LICENSE*</include>
				<include>NOTICE*</include>
				<!--include>build.xml</include-->
			</includes>
		</fileSet>
		<fileSet>
			<directory>src</directory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<!--includes>
				<include>org.hisrc.jsonix:jsonix-schema-compiler-plugin</include>
				<include>org.glassfish.jaxb:jaxb-runtime</include>
				<include>org.glassfish.jaxb:jaxb-xjc</include>
				<include>org.jvnet.jaxb2_commons:jaxb2-basics-ant</include>
			</includes-->
			<excludes>
				<exclude>org.hisrc.jsonix:jsonix-schema-compiler-full</exclude>
				<!--include>org.glassfish.jaxb:jaxb-runtime</include>
				<include>org.glassfish.jaxb:jaxb-xjc</include>
				<include>org.jvnet.jaxb2_commons:jaxb2-basics-ant</include-->
			</excludes>
		</dependencySet>
	</dependencySets>
	<files>
		<file>
			<source>${basedir}/project-build.xml</source>
			<destName>build.xml</destName>
		</file>
	</files>
</assembly>
